<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.devexchanges.bluetoothchatapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="info.devexchanges.bluetoothchatapp.MainActivity" >
        </activity>
        <activity android:name="info.devexchanges.bluetoothchatapp.MainActivityPhoto" >
        </activity>
        <activity android:name="info.devexchanges.bluetoothchatapp.FirstActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="info.devexchanges.bluetoothchatapp.WifiSelectorActivity" />
        <activity android:name="info.devexchanges.bluetoothchatapp.WiFiDirectActivity" />
    </application>

</manifest>